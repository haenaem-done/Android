<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Done" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Text -->
    <style name="all_toolbar_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- layout -->
    <style name="all_layout">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <!-- EditText -->
    <style name="all_edittext" parent="all_layout">
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/all_edittext_background_selector</item>
        <item name="android:textCursorDrawable">@drawable/all_edittext_cursor_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- Button -->
    <style name="all_button_layout" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    <style name="all_button" parent="all_button_layout">
        <item name="android:layout_height">54dp</item>
        <item name="android:background">@drawable/all_button_round_selector</item>
        <item name="android:textColor">@drawable/all_button_text_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:state_enabled">true</item>

    </style>

    <style name="all_kakao_button" parent="all_button">
        <item name="android:backgroundTint">@color/kakaoColor</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>
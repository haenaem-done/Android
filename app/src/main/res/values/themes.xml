<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Done" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_regular</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Text -->
    <style name="all_wrong_pattern_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/errorColor</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="all_mini_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/contextMiniColor</item>
    </style>

    <style name="all_content_mini_text" parent="all_mini_text">
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:translationY">-3.6sp</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="start_title_text">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/contextColor</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_bold</item>
        <item name="android:translationY">-2.4sp</item>
        <item name="android:layout_marginTop">106dp</item>
    </style>

    <style name="start_sub_title_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/contextColor</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="find_pwd_explain">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:translationY">-2.4sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:gravity">top</item>
    </style>
    <style name="find_pwd_explain_bold" parent="find_pwd_explain">
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_bold</item>
    </style>

    <style name="main_done_list_count">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_bold</item>
    </style>

    <style name="main_done_list_count_orange" parent="main_done_list_count">
        <item name="android:textColor">@color/doneDarkOrangeColor</item>
    </style>

    <style name="done_sub_title_text" parent="start_sub_title_text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="done_hint_text">
        <item name="android:textColor">@color/doneHintColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- TEXT PLAN & ROUTINE -->

    <style name="done_activity_detail">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/doneDetailColor</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="done_add_button">
        <item name="android:textColor">@color/mainDoneListColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="done_item_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="done_edit_button">
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <!-- CALENDAR -->
    <style name="calendar_header_legend">
        <item name="fontFamily">@font/spoqa_han_sans_neo_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>


    <!-- Toolbar -->
    <style name="all_toolbar_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_bold</item>
        <item name="android:layout_marginTop">31dp</item>
    </style>

    <style name="all_toolbar_back_btn">
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:background">@null</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginTop">33dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>


    <!-- EditText -->
    <style name="all_edittext">
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/all_et_background_selector</item>
        <item name="android:textCursorDrawable">@drawable/all_et_cursor_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="all_edittext_pwd" parent="all_edittext">
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLength">8</item>
    </style>

    <style name="done_edittext">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/done_et_solid</item>
        <item name="android:padding">13dp</item>
        <item name="android:textColorHint">@color/doneHintColor</item>
    </style>


    <!-- Button -->
    <style name="all_button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">54dp</item>
        <item name="android:background">@drawable/all_btn_round_selector</item>
        <item name="android:textColor">@drawable/all_btn_text_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:state_enabled">true</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_medium</item>
    </style>

    <style name="all_kakao_button" parent="all_button">
        <item name="android:backgroundTint">@color/kakaoColor</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="all_white_button" parent="all_button">
        <item name="android:background">@drawable/all_btn_round_stroke</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="main_button_stroke" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">31dp</item>
        <item name="android:layout_width">58dp</item>
        <item name="android:background">@drawable/all_btn_round_stroke</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_bold</item>
    </style>

    <style name="main_button_solid" parent="main_button_stroke">
        <item name="android:background">@drawable/all_btn_round_selector</item>
        <item name="android:enabled">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="done_button_stroke" parent="main_button_stroke">
        <item name="android:background">@drawable/all_btn_round_stroke_blue</item>
        <item name="android:textColor">@color/mainDoneListColor</item>
    </style>

    <style name="done_button_solid" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_light</item>
        <item name="android:background">@drawable/all_btn_round_solid_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>


    <!-- Spinner -->
    <style name="ob_alarm_timepicker">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_bold</item>
    </style>


    <!-- Tablayout -->
    <style name="done_tab_layout" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_bold</item>
        <item name="android:textSize">14sp</item>
    </style>


    <!-- Calendar -->
    <style name="calendar_header_week" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="calendar_date">
        <item name="android:weekNumberColor">@color/calendarColor</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_regular</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="calendar_header">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_bold</item>
    </style>

</resources>
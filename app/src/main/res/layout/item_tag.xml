<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/done_write_btn_hash_tag"
        android:background="@drawable/done_tag_round_selector"
        android:textColor="@drawable/done_tag_text_selector"
        android:textSize="@dimen/text_done"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/done_write_btn_tag_padding"
        android:paddingEnd="@dimen/done_write_btn_tag_padding"
        android:includeFontPadding="false"
        android:clickable="true"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/day_cell_height">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/disableColor" />

    <ImageView
        android:id="@+id/iv_today_dot"
        android:layout_width="@dimen/day_today"
        android:layout_height="@dimen/day_today"
        android:layout_marginTop="@dimen/day_today_margin_top"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_calendar_dot"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/calendarDayText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/day_date"
        android:includeFontPadding="false"
        android:text="8"
        android:fontFamily="@font/spoqa_han_sans_neo_light"
        android:textColor="@color/calendarColor"
        android:gravity="center_horizontal"
        android:textSize="@dimen/day_done_text"/>

    <TextView
        android:id="@+id/doneIcon"
        android:layout_width="@dimen/day_done_icon"
        android:layout_height="@dimen/day_done_icon"
        android:textColor="@color/white"
        android:background="@drawable/ic_calendar_done_icon"
        android:gravity="center"
        android:textSize="@dimen/day_done_text"
        android:text="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/day_done_margin_top"
        android:layout_marginBottom="@dimen/day_done_margin_bottom"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="12dp"
    tools:context=".view.my.menu.MyGradeFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="0dp"
        android:text="@string/grade_my"
        style="@style/all_toolbar_text"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        style="@style/my_card_view_style">
        <include
            android:id="@+id/layout_grade"
            layout="@layout/my_level"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="28dp"
        android:text="@string/grade_title"
        style="@style/all_toolbar_text"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        style="@style/my_card_view_style">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <ImageView
                    android:id="@+id/iv_grade_1"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/img_grade_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <LinearLayout
                    android:id="@+id/ll_grade_level_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="9dp"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_grade_1"
                    app:layout_constraintBottom_toTopOf="@id/tv_grade_detail_1"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/tv_grade_name_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/grade_1"
                        android:layout_marginEnd="6dp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:textSize="20sp"
                        android:textColor="@color/contextMiniColor"/>
                    <TextView
                        android:id="@+id/tv_grade_level_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/grade_1_level"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:textSize="14sp"
                        android:textColor="@color/mainDoneColor"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_grade_detail_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/grade_1_detail"
                    android:fontFamily="@font/spoqa_han_sans_neo_light"
                    android:textSize="13sp"
                    android:textColor="#B1B1B1"
                    app:layout_constraintTop_toBottomOf="@id/ll_grade_level_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/ll_grade_level_1"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/disableColor"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <ImageView
                    android:id="@+id/iv_grade_2"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/img_grade_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <LinearLayout
                    android:id="@+id/ll_grade_level_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="9dp"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_grade_2"
                    app:layout_constraintBottom_toTopOf="@id/tv_grade_detail_2"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/tv_grade_name_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/grade_2"
                        android:layout_marginEnd="6dp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:textSize="20sp"
                        android:textColor="@color/contextMiniColor"/>
                    <TextView
                        android:id="@+id/tv_grade_level_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/grade_2_level"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:textSize="14sp"
                        android:textColor="@color/mainDoneColor"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_grade_detail_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/grade_2_detail"
                    android:fontFamily="@font/spoqa_han_sans_neo_light"
                    android:textSize="13sp"
                    android:textColor="#B1B1B1"
                    app:layout_constraintTop_toBottomOf="@id/ll_grade_level_2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/ll_grade_level_2"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/disableColor"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <ImageView
                    android:id="@+id/iv_grade_3"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/img_grade_3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <LinearLayout
                    android:id="@+id/ll_grade_level_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="9dp"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_grade_3"
                    app:layout_constraintBottom_toTopOf="@id/tv_grade_detail_3"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/tv_grade_name_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/grade_3"
                        android:layout_marginEnd="6dp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:textSize="20sp"
                        android:textColor="@color/contextMiniColor"/>
                    <TextView
                        android:id="@+id/tv_grade_level_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/grade_3_level"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:textSize="14sp"
                        android:textColor="@color/mainDoneColor"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_grade_detail_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/grade_3_detail"
                    android:fontFamily="@font/spoqa_han_sans_neo_light"
                    android:textSize="13sp"
                    android:textColor="#B1B1B1"
                    app:layout_constraintTop_toBottomOf="@id/ll_grade_level_3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/ll_grade_level_3"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/disableColor"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <ImageView
                    android:id="@+id/iv_grade_4"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/img_grade_4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <LinearLayout
                    android:id="@+id/ll_grade_level_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="9dp"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_grade_4"
                    app:layout_constraintBottom_toTopOf="@id/tv_grade_detail_4"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/tv_grade_name_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/grade_4"
                        android:layout_marginEnd="6dp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:textSize="20sp"
                        android:textColor="@color/contextMiniColor"/>
                    <TextView
                        android:id="@+id/tv_grade_level_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/grade_4_level"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:textSize="14sp"
                        android:textColor="@color/mainDoneColor"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_grade_detail_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/grade_4_detail"
                    android:fontFamily="@font/spoqa_han_sans_neo_light"
                    android:textSize="13sp"
                    android:textColor="#B1B1B1"
                    app:layout_constraintTop_toBottomOf="@id/ll_grade_level_4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/ll_grade_level_4"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
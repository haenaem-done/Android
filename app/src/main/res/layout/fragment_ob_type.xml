<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.signin.ObTypeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/left_margin"
            app:layout_constraintRight_toLeftOf="@id/right_margin">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘도해냄"
                android:layout_marginRight="0dp"
                style="@style/content_title_text" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ob_title_type_hi"
                android:layout_marginLeft="0dp"
                style="@style/content_title_text" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/ob_title_type_question"
            android:layout_marginTop="5sp"
            app:layout_constraintTop_toBottomOf="@id/ll_title"
            app:layout_constraintLeft_toRightOf="@id/left_margin"
            app:layout_constraintRight_toLeftOf="@id/right_margin"
            style="@style/content_title_text" />

        <LinearLayout
            android:id="@+id/ll_type_j"
            android:layout_width="0dp"
            android:layout_height="165dp"
            android:hint="@string/ob_hint_nickname"
            android:layout_marginTop="52dp"
            android:orientation="horizontal"
            android:elevation="30dp"
            android:background="@drawable/ob_type_ll_round_selector"
            app:layout_constraintTop_toBottomOf="@id/tv_title2"
            app:layout_constraintLeft_toRightOf="@id/left_margin"
            app:layout_constraintRight_toLeftOf="@id/right_margin">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@color/white"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="6dp">
                <TextView
                    android:layout_width="191dp"
                    android:layout_height="33dp"
                    android:text="@string/type_j"
                    android:textSize="22sp"
                    android:fontFamily="@font/spoqa_han_sans_neo_bold"
                    android:textColor="@color/contextColor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:text="@string/type_j_subtitle"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:fontFamily="@font/spoqa_han_sans_neo_bold"
                    android:textColor="@color/contextColor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="13dp"
                    android:text="@string/type_j_content"
                    style="@style/all_mini_text"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_type_p"
            android:layout_width="0dp"
            android:layout_height="165dp"
            android:hint="@string/ob_hint_nickname"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:elevation="30dp"
            android:background="@drawable/ob_type_ll_round_selector"
            app:layout_constraintTop_toBottomOf="@id/ll_type_j"
            app:layout_constraintLeft_toRightOf="@id/left_margin"
            app:layout_constraintRight_toLeftOf="@id/right_margin">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@color/white"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="6dp">
                <TextView
                    android:layout_width="191dp"
                    android:layout_height="33dp"
                    android:text="@string/type_p"
                    android:textSize="22sp"
                    android:fontFamily="@font/spoqa_han_sans_neo_bold"
                    android:textColor="@color/contextColor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:text="@string/type_p_subtitle"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:fontFamily="@font/spoqa_han_sans_neo_bold"
                    android:textColor="@color/contextColor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="13dp"
                    android:text="@string/type_p_content"
                    style="@style/all_mini_text"/>
            </LinearLayout>
        </LinearLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ob_hint_type"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@id/btn_next"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_marginBottom="56dp"
            android:text="@string/ob_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/left_margin"
            app:layout_constraintRight_toLeftOf="@id/right_margin"
            android:enabled="false"
            style="@style/all_button"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="20dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>